<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/background2"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/retangulo_laranja" />

    <TextView
        android:id="@+id/tv_forum"
        android:layout_width="335dp"
        android:layout_height="86dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="1dp"
        android:gravity="center"
        android:text="parece que você ainda não se conectou com nenhum motorista"
        android:textColor="#21445B"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background2" />

    <Button
        android:id="@+id/conectar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FAB744"
        android:text="Conectar"
        android:textColor="#21445B"
        app:layout_constraintEnd_toEndOf="@+id/tv_forum"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_forum"
        app:layout_constraintTop_toBottomOf="@+id/tv_forum" />

</androidx.constraintlayout.widget.ConstraintLayout>